{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "sites_func_handson_name": {
            "defaultValue": "func-yourname-handson",
            "type": "String"
        },
        "Clusters_adxhandson_name": {
            "defaultValue": "adxyournamehandson",
            "type": "String"
        },
        "IotHubs_iot_handson_name": {
            "defaultValue": "iot-yourname-handson",
            "type": "String"
        },
        "systemTopics_systemtopic_name": {
            "defaultValue": "systemtopic",
            "type": "String"
        },
        "namespaces_evh_handson_name": {
            "defaultValue": "evh-yourname-handson",
            "type": "String"
        },
        "components_func_handson_name": {
            "defaultValue": "func-yourname-handson",
            "type": "String"
        },
        "serverfarms_ASP_ADTHandson_name": {
            "defaultValue": "ASP-yournameADTHandson",
            "type": "String"
        },
        "storageAccounts_adthandson_name": {
            "defaultValue": "yournameadthandson",
            "type": "String"
        },
        "digitalTwinsInstances_adt_handson_name": {
            "defaultValue": "adt-yourname-handson",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2022-04-30-preview",
            "name": "[parameters('IotHubs_iot_handson_name')]",
            "location": "japaneast",
            "sku": {
                "name": "S1",
                "tier": "Standard",
                "capacity": 1
            }
        },
        {
            "type": "Microsoft.DigitalTwins/digitalTwinsInstances",
            "apiVersion": "2022-05-31",
            "name": "[parameters('digitalTwinsInstances_adt_handson_name')]",
            "location": "southeastasia",
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces",
            "apiVersion": "2022-01-01-preview",
            "name": "[parameters('namespaces_evh_handson_name')]",
            "location": "Japan East",
            "sku": {
                "name": "Standard",
                "tier": "Standard",
                "capacity": 1
            },
            "properties": {
                "minimumTlsVersion": "1.2",
                "publicNetworkAccess": "Enabled",
                "disableLocalAuth": false,
                "zoneRedundant": true,
                "isAutoInflateEnabled": false,
                "maximumThroughputUnits": 0,
                "kafkaEnabled": true
            }
        },
        {
            "type": "Microsoft.Kusto/Clusters",
            "apiVersion": "2022-07-07",
            "name": "[parameters('Clusters_adxhandson_name')]",
            "location": "Japan East",
            "sku": {
                "name": "Dev(No SLA)_Standard_E2a_v4",
                "tier": "Basic",
                "capacity": 1
            },
            "identity": {
                "type": "SystemAssigned"
            }
        },
        {
            "type": "Microsoft.EventGrid/systemTopics",
            "apiVersion": "2022-06-15",
            "name": "[parameters('systemTopics_systemtopic_name')]",
            "location": "japaneast",
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', parameters('IotHubs_iot_handson_name'))]"
            ],
            "properties": {
                "source": "[resourceId('Microsoft.Devices/IotHubs', parameters('IotHubs_iot_handson_name'))]",
                "topicType": "Microsoft.Devices.IoTHubs"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/AuthorizationRules",
            "apiVersion": "2022-01-01-preview",
            "name": "[concat(parameters('namespaces_evh_handson_name'), '/RootManageSharedAccessKey')]",
            "location": "Japan East",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_evh_handson_name'))]"
            ],
            "properties": {
                "rights": [
                    "Listen",
                    "Manage",
                    "Send"
                ]
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs",
            "apiVersion": "2022-01-01-preview",
            "name": "[concat(parameters('namespaces_evh_handson_name'), '/', parameters('namespaces_evh_handson_name'))]",
            "location": "japaneast",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_evh_handson_name'))]"
            ],
            "properties": {
                "messageRetentionInDays": 1,
                "partitionCount": 1,
                "status": "Active"
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/networkRuleSets",
            "apiVersion": "2022-01-01-preview",
            "name": "[concat(parameters('namespaces_evh_handson_name'), '/default')]",
            "location": "Japan East",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_evh_handson_name'))]"
            ],
            "properties": {
                "publicNetworkAccess": "Enabled",
                "defaultAction": "Allow",
                "virtualNetworkRules": [],
                "ipRules": []
            }
        },
        {
            "type": "Microsoft.Kusto/Clusters/Databases",
            "apiVersion": "2022-07-07",
            "name": "[concat(parameters('Clusters_adxhandson_name'), '/historydb')]",
            "location": "Japan East",
            "dependsOn": [
                "[resourceId('Microsoft.Kusto/Clusters', parameters('Clusters_adxhandson_name'))]"
            ],
            "kind": "ReadWrite",
            "properties": {
                "softDeletePeriod": "P365D",
                "hotCachePeriod": "P31D"
            }
        },
        {
            "type": "Microsoft.EventGrid/systemTopics/eventSubscriptions",
            "apiVersion": "2022-06-15",
            "name": "[concat(parameters('systemTopics_systemtopic_name'), '/iothubtotwins')]",
            "dependsOn": [
                "[resourceId('Microsoft.EventGrid/systemTopics', parameters('systemTopics_systemtopic_name'))]",
                "[resourceId('Microsoft.Web/sites/functions', parameters('sites_func_handson_name'), 'IoTHubtoTwins')]"
            ],
            "properties": {
                "destination": {
                    "properties": {
                        "resourceId": "[resourceId('Microsoft.Web/sites/functions', parameters('sites_func_handson_name'), 'IoTHubtoTwins')]",
                        "maxEventsPerBatch": 1,
                        "preferredBatchSizeInKilobytes": 64
                    },
                    "endpointType": "AzureFunction"
                },
                "filter": {
                    "includedEventTypes": [
                        "Microsoft.Devices.DeviceCreated",
                        "Microsoft.Devices.DeviceDeleted",
                        "Microsoft.Devices.DeviceConnected",
                        "Microsoft.Devices.DeviceDisconnected",
                        "Microsoft.Devices.DeviceTelemetry"
                    ],
                    "enableAdvancedFilteringOnArrays": true
                },
                "labels": [],
                "eventDeliverySchema": "EventGridSchema",
                "retryPolicy": {
                    "maxDeliveryAttempts": 30,
                    "eventTimeToLiveInMinutes": 1440
                }
            }
        },
        {
            "type": "Microsoft.EventHub/namespaces/eventhubs/consumergroups",
            "apiVersion": "2022-01-01-preview",
            "name": "[concat(parameters('namespaces_evh_handson_name'), '/', parameters('namespaces_evh_handson_name'), '/$Default')]",
            "location": "japaneast",
            "dependsOn": [
                "[resourceId('Microsoft.EventHub/namespaces/eventhubs', parameters('namespaces_evh_handson_name'), parameters('namespaces_evh_handson_name'))]",
                "[resourceId('Microsoft.EventHub/namespaces', parameters('namespaces_evh_handson_name'))]"
            ],
            "properties": {}
        }
    ]
}